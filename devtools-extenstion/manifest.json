{
  "manifest_version": 3,
  "name": "Forge Query DevTools",
  "version": "1.0.0",
  "description": "DevTools extension for Forge Query - Monitor queries, cache, and performance",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"]
}

